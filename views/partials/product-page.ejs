<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="ml-5">
                <img style="width: 500px" src="/product-pictures/<%= product.productPicture %>" />
                <br />
                <h5 class="card-title">Name: <%= product.productName %></h5>
                <p class="card-text">Description: <%= product.description %></p>
                <br />
                <span class="card-text">Category: $<%= product.category %></span>
                <span class="card-text">Price: $<%= product.price %></span>
            </div>
        </div>
        <div class="col-md-6">
               <form class="mt-5"> 
                    <select class="custom-select w-25" name="quantity">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                    </select>
                    <br />
                    <br />
                    <button class="btn btn-outline-primary">Buy Now</button>
               </form>
        </div>
    </div>
</div>