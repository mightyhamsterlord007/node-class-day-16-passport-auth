<div class="container" style="margin-top: 50px; display: flex; flex-wrap: wrap; flex-direction: row;">
    <% products.forEach((product) => { %>
            <div class="card" style="flex-basis: 25%; margin-right: 5px; margin-left: 5px">
                <img class="card-img-top" style="height: 200px" src="/product-pictures/<%= product.productPicture %>" alt="Card image cap">
                <div class="card-body">
                <h5 class="card-title">Name: <%= product.productName %></h5>
                <p class="card-text">Description: <%= product.description %></p>
                <span class="card-text">Category: <%= product.category %></span>
                <br />
                <br />
                <span class="card-text">Price: $<%= product.price %></span>
                <br />
                <br />
                <a href="/products/<%= product._id %>" class="btn btn-primary">Buy now</a>
                </div>
            </div>
       
    <% }) %>
</div> 